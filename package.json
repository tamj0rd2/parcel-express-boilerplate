{
  "name": "your-app-name",
  "private": true,
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:acceptance": "npm i --prefix ./black-box-tests/acceptance-tests && npm test --prefix ./black-box-tests/acceptance-tests",
    "dev": "PORT=8080 ts-node -P ./src/server/tsconfig.json ./src/server/dev.ts",
    "build": "tsc -b ./src/server/tsconfig.json",
    "start": "NODE_ENV=production node -r module-alias/register -r source-map-support/register ./out/server/index.js",
    "typecheck": "tsc -b ./tsconfig.json",
    "lint": "npm run lint:base -- '**/*.ts?(x)'",
    "lint:base": "eslint --color --ignore-path .gitignore --cache"
  },
  "_moduleAliases": {
    "~shared": "./out/shared",
    "~server": "./out/server"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "npm run lint:base -- --fix"
    ]
  },
  "engines": {
    "node": "12"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@testing-library/react": "^11.2.5",
    "@types/express": "^4.17.11",
    "@types/express-pino-logger": "^4.0.2",
    "@types/jest": "^26.0.21",
    "@types/node": "^14.6.4",
    "@types/parcel-bundler": "^1.12.3",
    "@types/react": "^17.0.3",
    "@types/react-dom": "^17.0.3",
    "@types/tsc-watch": "^4.2.0",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.18.0",
    "concurrently": "^6.0.0",
    "eslint": "^7.22.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-cypress": "^2.11.2",
    "eslint-plugin-jest": "^24.3.2",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.23.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^5.2.0",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "parcel-bundler": "^1.12.5",
    "prettier": "^2.2.1",
    "ts-jest": "^26.5.4",
    "ts-node": "^9.1.1",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.2.3"
  },
  "dependencies": {
    "express": "^4.17.1",
    "express-pino-logger": "^6.0.0",
    "module-alias": "^2.2.2",
    "pino-pretty": "^4.7.1",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "source-map-support": "^0.5.19"
  }
}
